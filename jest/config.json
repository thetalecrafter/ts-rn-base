{
  "preset": "react-native",
  "rootDir": "..",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "transform": {
    "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
    "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "testMatch": [
    "**/__tests__/**/*.test.{ts,tsx}"
  ],
  "setupFiles": [
    "<rootDir>/jest/setup.ts"
  ],
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/!(*.test)*.{js,ts,tsx}"
  ],
  "coverageReporters": [
    "text-summary",
    "html"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 95,
      "lines": 95,
      "statements": 95
    },
    "src/**/!(*.test)*.{js,ts,tsx}": {
      "branches": 90,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  }
}
